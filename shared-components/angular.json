{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "workspace-library": {
      "projectType": "library",
      "root": "projects/workspace-library",
      "sourceRoot": "projects/workspace-library/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/workspace-library/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/workspace-library/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/workspace-library/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/workspace-library/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/workspace-library/**/*.ts",
              "projects/workspace-library/**/*.html"
            ]
          }
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": "projects/workspace-library/.storybook",
            "browserTarget": "workspace-library:build",
            "compodoc": false,
            "port": 6006,
            "assets":["./projects/workspace-library/src/assets"],
            "styles":["@angular/material/prebuilt-themes/indigo-pink.css",
            "./projects/workspace-library/src/assets/css/form-elements.css",
            "./projects/workspace-library/src/style.css",
            "./projects/workspace-library/src/assets/css/custom.css"]
             }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "projects/workspace-library/.storybook",
            "browserTarget": "workspace-library:build",
            "compodoc": false,
            "outputDir": "storybook-static"
          }
        }
      },
      "schematics": {
        "@schematics/angular:component": {
          "standalone": false
        },
        "@schematics/angular:directive": {
          "standalone": false
        },
        "@schematics/angular:pipe": {
          "standalone": false
        }
      }
    }
  },
  "cli": {
    "schematicCollections": [
      "@angular-eslint/schematics"
    ]
  }
}
